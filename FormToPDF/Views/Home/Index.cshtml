@model RequestForQuotation

@{
    ViewData["Title"] = "Insurance Form";
}

<div class="form-container mx-auto mt-4 shadow-sm p-3 bg-white rounded">
    <form asp-action="CreateOffer" method="post">
        <div class="form-group">
            <label asp-for="CompanyName" for="inputCompanyName">Company Name</label>
            <input asp-for="CompanyName" class="form-control" id="inputCompanyName">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson" for="inputContactPerson">Person of contact</label>
            <input asp-for="ContactPerson" class="form-control" id="inputContactPerson">
            <span asp-validation-for="ContactPerson" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" for="inputAddress">Address</label>
            <input asp-for="Address" class="form-control" id="inputAddress" />
        </div>
        <div class="form-group">
            <label asp-for="City" for="inputCity">City</label>
            <input asp-for="City" class="form-control" id="inputCity" />
        </div>
        <div class="form-group">
            <label asp-for="Email" for="inputEmail">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="inputEmail" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="YearlyRevenue" for="inputRevenue">Annual revenue</label>
            <input asp-for="YearlyRevenue" type="number" min="0" max="100000000" class="form-control" id="inputRevenue" />
            <span asp-validation-for="YearlyRevenue" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AmountOfInsurance" for="inputOperations">Amount of Insurance</label>
            <select asp-for="AmountOfInsurance" class="form-control" id="inputOperations" asp-items="Html.GetEnumSelectList<AmountOfInsurance>()">
                <option class="selected-value" selected="selected" value="">Choose...</option>
            </select>
            <span asp-validation-for="AmountOfInsurance" class="text-danger"></span>
        </div>
        <button class="btn w-100 btn-formtopdf py-2 text-white" type="submit">Generate PDF</button>
    </form>
</div>